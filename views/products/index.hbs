{{#> app}}
{{#*inline "content"}}
    {{#each viewData.products}}
        <div class="col-md-4 col-lg-3 mb-2">
            <div class="card">
                <img src="/image/{{image}}" class="card-img-top img-card" alt="">
                <div class="card-body text-center">
                    <a href="/products/{{id}}" class="btn bg-primary text-white">{{name}}</a>
                </div>
            </div>
        </div>
    {{/each}}
{{/inline}}
{{/app}}